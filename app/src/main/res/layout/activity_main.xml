<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pic_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="100dp"
        android:background="#00005500"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="always" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/level_list"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/pic_recyclerview"
        android:layout_marginTop="10dp"
        android:background="#00993312"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_below="@+id/pic_recyclerview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#0000ff00">

        <ImageView
            android:id="@+id/sign_reduce"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@mipmap/sign_reduce"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/sign_add"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/sign_add"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>